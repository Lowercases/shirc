#
# shirc_create_fifos()
#
# Creates the FIFOs for communication
#
#

shirc_create_fifos() {
    for fifo in in out
    do
        if ! mkfifo "$shirc_tmp_dir/$fifo"
        then
            shirc_fatal_error "Couldn't create $fifo fifo"
        fi

    done

    shirc_fifo_in="$shirc_tmp_dir/in"
    shirc_fifo_out="$shirc_tmp_dir/out"

}

shirc_delete_fifos() {
    for fifo in in out
    do
        rm -f "$shirc_tmp_dir/$fifo"
    done

}
